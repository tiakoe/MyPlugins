<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemViewLayout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#8793D3"
    android:padding="10dp"
    tools:ignore="ContentDescription,HardcodedText"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorLightBlue2"
        app:layout_constraintLeft_toRightOf="@+id/image1"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxLines="2"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorLightBlue2"
        app:layout_constraintBaseline_toBaselineOf="@id/index"
        app:layout_constraintLeft_toRightOf="@+id/index"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/overview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="3"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        app:layout_constraintLeft_toRightOf="@+id/image1"
        android:textColor="@color/colorWhite" />


</androidx.constraintlayout.widget.ConstraintLayout>
